<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gamedb.interfaces.RoleMapper">
    <select id="getRole" resultType="gamedb.pojo.Role">
        select id,role_name as roleName,note from ${tableName} where id=#{id}
    </select>
    <insert id="insertRole" parameterType="gamedb.pojo.Role">
        insert into ${tableName}(id,role_name,note) values (#{id},#{roleName},#{note})
    </insert>
    <update id="updateRole" parameterType="gamedb.pojo.Role">
        update ${tableName} set role_name=#{roleName},note=#{note} where id=#{id}
    </update>
    <delete id="deleteRole" parameterType="gamedb.pojo.Role">
        delete from ${tableName} where id=#{id}
    </delete>
</mapper>